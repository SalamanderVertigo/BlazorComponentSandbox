@page "/card"
@using ComponentSandbox.Models

<JGCard Id="Card1">
    <CardHeader >
        <JGToolTip ToolTip="ToolTip 1">
            <p style="color: whitesmoke">Example 1</p>
        </JGToolTip>
    </CardHeader>
    <CardContent>
        <p style="color: whitesmoke">Content 1</p>
    </CardContent>
</JGCard>

<JGCard Id="Card2">
    <CardHeader>
        <div class="card-header-avatar">
            <div class="card-header-avatar-left">
                <JGToolTip ToolTip="Name...">
                    <p>(Name...)</p>
                </JGToolTip>
            </div>
            <div class="card-header-avatar-right">
                <JGToolTip ToolTip="Avatar...">
                    <Avatar Name="JG"/>
                </JGToolTip>
            </div>
        </div>
    </CardHeader>
    <CardContent>
        <p style="color: whitesmoke">Content 2</p>
    </CardContent>
</JGCard>

<h3> Cards looping over a Grid</h3>

<JGGrid DataSource="@Data" TItem="Person" Virtualize="true">
    <GridRow Id="@context.Id.ToString()" Key="@context.Id.ToString()">
        <GridColumn>
            <JGCard>
                <CardHeader>
                    <JGToolTip ToolTip="@context.FirstName">
                        <p style="color: whitesmoke">@context.FirstName</p>
                    </JGToolTip>
                </CardHeader>
                <CardContent>
                    <JGToolTip ToolTip="@context.Email">
                        <p style="color: whitesmoke">@context.Email</p>
                    </JGToolTip>
                </CardContent>
            </JGCard>
        </GridColumn>
    </GridRow>
</JGGrid>

